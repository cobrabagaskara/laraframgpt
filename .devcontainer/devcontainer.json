{
  "name": "Laravel Super Stable",
  "image": "mcr.microsoft.com/devcontainers/php:8.3",  

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "neilbrayfield.php-docblocker",
        "mikestead.dotenv",
        "ms-azuretools.vscode-docker"
